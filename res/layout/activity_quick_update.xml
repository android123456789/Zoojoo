<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/default_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_logo" />

    <RelativeLayout
        android:id="@+id/update_counter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/default_img"
        android:layout_alignRight="@+id/default_img"
        android:background="@drawable/circle_red_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/counter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_counter"
        android:layout_alignLeft="@+id/update_title"
        android:text="Friday, July 15."
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_date"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/default_img"
        android:text="Read More Books"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>